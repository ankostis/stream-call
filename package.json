{
  "name": "stream-call",
  "version": "0.3.0",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build:ts": "esbuild src/broker.ts src/page.ts src/popup.ts src/options.ts src/hover-ui.ts --bundle --outdir=dist --format=iife --target=firefox115 --platform=browser",
    "copy:static": "mkdir -p dist && cp popup.html options.html hover-ui.html dist/",
    "build": "npm run clean && npm run build:ts && npm run copy:static",
    "test": "node --test --import tsx tests/unit/*.test.ts",
    "test:integration": "node tests/integration/run.js",
    "test:integration:options": "node tests/integration/options-crud.js",
    "test:integration:real": "node tests/integration/real-stream.js",
    "test:integration:httpbin": "node tests/integration/httpbin-full.js --puppeteer",
    "package": "zip -r stream-call-$npm_package_version.zip manifest.json dist icons -x 'icons/generate-icons.html'"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.9.0",
    "chai": "^4.3.10",
    "esbuild": "^0.27.1",
    "jsdom": "^27.3.0",
    "puppeteer": "^24.33.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.0",
    "web-ext": "^7.12.0"
  }
}
